@using WebUI.Html_helpers
@model WebUI.Models.LotsListViewModel
@{
    ViewBag.Title = "Lots";
}
@foreach (var p in Model.Lots)
{
    <div class="item">
        <h3>@p.Title</h3>
        @p.Description
        <h4>@p.CurrentPrice.ToString("c")</h4>
        @p.GoldPrice
        <h5>@p.ViewCount</h5>
    </div>
}
<div class="pager">
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new { page = x }))
</div>
