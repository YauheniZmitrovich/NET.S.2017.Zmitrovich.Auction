@model WebUI.Models.BidOnViewModel

@using (Html.BeginForm("BidOn", "Lot", FormMethod.Post))
{
    @Html.HiddenFor(l => l.LotId);
    @Html.HiddenFor(l => l.CurrentPrice);
    @Html.HiddenFor(l => l.GoldPrice);
    <h6> Enter your bid value: 
        <br>
        @Html.TextBoxFor(b=>b.Cost, (Model.CurrentPrice + 10).ToString())
    </h6>
    @Html.ValidationMessageFor(b => b.Cost)

    <div class="modal-footer">
        <button type="submit" class="btn btn-success">Submit</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
}
