@using WebUI.Models
@model Domain.Entities.Lot

<a href="#myModalBuyBox" class="pull-right btn btn-success"
   style="margin-right: 20px; padding-right: 29px; padding-left: 29px;"
   data-toggle="modal">Buy</a>

<div id="myModalBuyBox" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Buy it right now!</h4>
            </div>
            <div class="modal-body">
                @*<span class="label label-default" >
                    Gold price: @Model.GoldPrice.Value.ToString("c")
                </span>*@
                <h4 class="alert-danger" style="text-align:center" >Are you sure?</h4>
                @using (Html.BeginForm("Buy", "Lot", FormMethod.Post))
            {
                    @Html.HiddenFor(l => l.Id);
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success">Submit</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div> 
                }
            </div>
        </div>
    </div>
</div>