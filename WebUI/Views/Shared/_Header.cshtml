

<div class="navbar navbar-inverse" role="navigation">
    <div class="container">
        <a class="navbar-brand" href='@Url.Action("Index", "Home")' style=" margin-left: -40px"> TastyPrice </a>
        @if (HttpContext.Current.User.Identity.IsAuthenticated)
        {
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav text-center ">
                    <li style="left: 225px;">
                        @using (Ajax.BeginForm("LotSearch", "Home", new AjaxOptions { UpdateTargetId = "results" }))
                        {
                            <div class="form-group" style="margin-top: 8px; margin-bottom: 5px;">
                                @Html.TextBox("name", null, new { @class = "form-control", placeholder = "Search" })
                            </div>
                        }
                        <div id="loading" style="display:none; color:Red; font-weight:bold;">
                            <p>Loading...</p>
                        </div>
                        <div id="results"></div>
                        @Scripts.Render("~/scripts/jquery-1.10.2.min.js")
                        @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right text-center ">
                    <li>
                        <a class="dropdown-toggle navbar-right" role="button" data-toggle="dropdown">
                            @User.Identity.Name
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="menu1">
                            <li role="presentation">@Html.ActionLink("My lots", "My", "Lot")</li>
                            <li role="presentation">@Html.ActionLink("My bids", "Bid", "Lot")</li>
                            <li role="presentation">@Html.ActionLink("My victories", "Victories", "Lot")</li>
                            <li role="presentation" class="divider"></li>
                            <li role="presentation">@Html.ActionLink("New lot", "Create", "Lot")</li>
                            <li role="presentation" class="divider"></li>
                            <li role="presentation">@Html.ActionLink("Log Out", "LogOut", "Account")</li>
                        </ul>
                    </li>

                </ul>
            </div>
        }
        else
        {
            <input type="button" value="Login" class="pull-right btn btn-success"
                   style="margin-top: 8px;"
                   onclick="location.href = '@Url.Action("Login", "Account")'" />
        }
    </div>
</div>
